{
    "openapi": "3.0.0",
    "info": {
        "title": "Swagger with Laravel",
        "version": "1.0.0"
    },
    "paths": {
        "/api/v1/auth/login": {
            "post": {
                "tags": [
                    "auth"
                ],
                "summary": "Logs user into system",
                "operationId": "643b1ef568bcd820eda5f8d045a56929",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "email",
                                    "password"
                                ],
                                "properties": {
                                    "email": {
                                        "type": "string",
                                        "example": "admin@admin.vn"
                                    },
                                    "password": {
                                        "type": "string",
                                        "example": "password"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "successful operation"
                    },
                    "400": {
                        "description": "Invalid username/password supplied"
                    }
                }
            }
        },
        "/api/v1/auth/logout": {
            "get": {
                "tags": [
                    "auth"
                ],
                "summary": "User logout",
                "operationId": "01fe3b60aa3348f884acf73dc6b0e78c",
                "responses": {
                    "200": {
                        "description": "User successfully logged out"
                    }
                },
                "security": [
                    {
                        "bearerAuth": [],
                        "API_Key_Authorization": []
                    }
                ]
            }
        },
        "/api/v1/auth/me": {
            "get": {
                "tags": [
                    "auth"
                ],
                "summary": "Get user profiles",
                "operationId": "537dcd1d54490af646d0379dad6570df",
                "responses": {
                    "200": {
                        "description": "User profile retrieved successfully"
                    }
                },
                "security": [
                    {
                        "bearerAuth": [],
                        "API_Key_Authorization": []
                    }
                ]
            }
        },
        "/api/v1/auth/register": {
            "post": {
                "tags": [
                    "auth"
                ],
                "summary": "Register new user",
                "operationId": "8cf252e767eb0c4ae9e5307f3fc7153a",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "email",
                                    "password"
                                ],
                                "properties": {
                                    "email": {
                                        "type": "string",
                                        "example": "user@email.com"
                                    },
                                    "password": {
                                        "type": "string",
                                        "example": "password"
                                    },
                                    "address": {
                                        "type": "string",
                                        "example": "Viet Nam"
                                    },
                                    "phone_number": {
                                        "type": "string",
                                        "example": "0123456789"
                                    },
                                    "name": {
                                        "type": "string",
                                        "example": "userNo1"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "successful operation"
                    },
                    "400": {
                        "description": "Invalid username/password supplied"
                    }
                }
            }
        },
        "/api/v1/auth/forgot-password": {
            "post": {
                "tags": [
                    "auth"
                ],
                "summary": "User request forgot password",
                "operationId": "1567504e7f628da38521120715c56a06",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "email",
                                    "password"
                                ],
                                "properties": {
                                    "email": {
                                        "type": "string",
                                        "example": "admin@admin.vn"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "successful operation"
                    },
                    "400": {
                        "description": "Invalid email supplied"
                    }
                }
            }
        },
        "/api/v1/auth/reset-password": {
            "post": {
                "tags": [
                    "auth"
                ],
                "summary": "User request reset password",
                "operationId": "6cede5531a660a7b685ea92300c441ee",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "email",
                                    "password",
                                    "confirmPassword",
                                    "otp"
                                ],
                                "properties": {
                                    "email": {
                                        "type": "string",
                                        "example": "admin@admin.vn"
                                    },
                                    "password": {
                                        "type": "string",
                                        "example": "password"
                                    },
                                    "econfirmPasswordmail": {
                                        "type": "string",
                                        "example": "econfirmPasswordmail"
                                    },
                                    "otp": {
                                        "type": "number",
                                        "example": "123456"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "successful operation"
                    },
                    "400": {
                        "description": "Invalid email supplied"
                    }
                }
            }
        },
        "/api/v1/hotels": {
            "get": {
                "tags": [
                    "hotels"
                ],
                "summary": "Lấy danh sách khách sạn",
                "operationId": "9d43ec0b7bdd6a87e618734f0452cb17",
                "parameters": [
                    {
                        "name": "province",
                        "in": "query",
                        "description": "Tên tỉnh hoặc thành phố, ví dụ: Thành phố Đà Nẵng",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "checkin",
                        "in": "query",
                        "description": "Ngày check-in, định dạng: Y-m-d",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "format": "date"
                        }
                    },
                    {
                        "name": "checkout",
                        "in": "query",
                        "description": "Ngày check-out, định dạng: Y-m-d",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "format": "date"
                        }
                    },
                    {
                        "name": "adult",
                        "in": "query",
                        "description": "Số lượng người lớn",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    },
                    {
                        "name": "children",
                        "in": "query",
                        "description": "Số lượng trẻ em",
                        "required": false,
                        "schema": {
                            "type": "integer"
                        }
                    },
                    {
                        "name": "rooms",
                        "in": "query",
                        "description": "Số lượng phòng",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    },
                    {
                        "name": "rate",
                        "in": "query",
                        "description": "Điểm đánh giá của khách sạn",
                        "required": false,
                        "schema": {
                            "type": "number",
                            "format": "float"
                        }
                    },
                    {
                        "name": "min_price",
                        "in": "query",
                        "description": "Giá tối thiểu",
                        "required": false,
                        "schema": {
                            "type": "number",
                            "format": "float"
                        }
                    },
                    {
                        "name": "max_price",
                        "in": "query",
                        "description": "Giá tối đa",
                        "required": false,
                        "schema": {
                            "type": "number",
                            "format": "float"
                        }
                    },
                    {
                        "name": "review",
                        "in": "query",
                        "description": "Điểm đánh giá từ người dùng",
                        "required": false,
                        "schema": {
                            "type": "number",
                            "format": "float"
                        }
                    },
                    {
                        "name": "page_index",
                        "in": "query",
                        "description": "Trang hiện tại",
                        "required": false,
                        "schema": {
                            "type": "integer"
                        }
                    },
                    {
                        "name": "page_size",
                        "in": "query",
                        "description": "Số lượng kết quả mỗi trang",
                        "required": false,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Danh sách khách sạn trả về",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "properties": {
                                            "id": {
                                                "type": "integer"
                                            },
                                            "name": {
                                                "type": "string"
                                            },
                                            "province": {
                                                "type": "string"
                                            },
                                            "price": {
                                                "type": "number"
                                            },
                                            "rating": {
                                                "type": "number"
                                            },
                                            "review_count": {
                                                "type": "integer"
                                            }
                                        },
                                        "type": "object"
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Bad request"
                    }
                }
            }
        },
        "/api/v1/hotels/{id}": {
            "get": {
                "tags": [
                    "hotels"
                ],
                "summary": "Display the specified hotel",
                "operationId": "a7c0a89bab481ec98ddf4de7d3186766",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID of hotel that needs to be fetched",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "format": "uuid"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "successful operation"
                    },
                    "400": {
                        "description": "Invalid supplied"
                    }
                }
            }
        },
        "/api/v1/payments": {
            "post": {
                "tags": [
                    "payment"
                ],
                "summary": "Create payment request url for user's order",
                "operationId": "857ed0151f8055bdfc76abd8e6017e58",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "price"
                                ],
                                "properties": {
                                    "price": {
                                        "type": "numeric",
                                        "example": "500.000"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "successful operation"
                    },
                    "400": {
                        "description": "Invalid request params supplied"
                    }
                }
            }
        }
    },
    "tags": [
        {
            "name": "auth",
            "description": "auth"
        },
        {
            "name": "hotels",
            "description": "hotels"
        },
        {
            "name": "payment",
            "description": "payment"
        }
    ],
    "components": {
        "securitySchemes": {
            "API_Key_Authorization": {
                "type": "apiKey",
                "description": "A short description for security scheme",
                "name": "x-api-key",
                "in": "header"
            },
            "bearerAuth": {
                "type": "http",
                "description": "A short description for security scheme",
                "name": "Authorization",
                "in": "header",
                "scheme": "bearer",
                "bearerFormat": "JWT"
            }
        }
    },
    "security": [
        {
            "API_Key_Authorization": [],
            "bearerAuth": []
        }
    ]
}